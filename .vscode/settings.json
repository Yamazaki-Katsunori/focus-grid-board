{
  // 全体（デフォルト）
  "editor.tabSize": 2,
  "editor.formatOnSave": false,

  // ここは言語関係なく有効な設定なので「直下」に置く
  // VSCode のワークスペースルートからの相対パスになるので、
  // frontend/ 配下に node_modules があるならパスもそこに合わせる
  "prettier.prettierPath": "frontend/node_modules/prettier/index.cjs",

    // Stylelint を有効化
  "stylelint.enable": true,

  // VSCode 標準の CSS 検証はオフ
  "css.validate": false,

  // Stylelint 拡張機能に CSS を見てもらう
  "stylelint.validate": ["css"],

    // 保存時に stylelint --fix を走らせる
  "editor.codeActionsOnSave": {
    "source.fixAll.stylelint": "explicit"
  },

  // Tailwind CSS IntelliSense に「これは Tailwind CSS ファイルだよ」と教える
  "files.associations": {
    "*.css": "tailwindcss"
  },

  "[json]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  "[yaml]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },

  // TypeScript 向けオーバーライド
  "[typescript]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.origanizeImports": "explicit"
    }
  },

  // （TSX も Prettier で保存時フォーマットしたい場合）
  "[typescriptreact]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.origanizeImports": "explicit"
    }
  },

  // ★ PHP 向けオーバーライド（ここで Pint を指定）
  "[php]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.rulers": [120],
    "editor.defaultFormatter": "open-southeners.laravel-pint"
  }
}
